<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="15dp"
    android:elevation="100dp"
    android:orientation="vertical"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="453dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView

                android:id="@+id/txtmodulekey"
                android:layout_width="407dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="Isbn"
                android:textColor="#000000"
                android:textSize="24dp"
                android:textStyle="bold"
                android:visibility="visible"
                tools:text="Isbn"
                tools:visibility="visible" />

            <TextView

                android:id="@+id/txtname"
                android:layout_width="422dp"
                android:layout_height="37dp"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:hint="@string/Bookname"
                android:text="Bookname"
                android:textColor="#150A0A"
                android:textColorHighlight="#151010"
                android:textColorHint="#E13535"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtrcb"
                android:layout_width="422dp"
                android:layout_height="49dp"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:text="Reference Book Criteria"
                android:textColor="#191010"
                android:textSize="18dp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>